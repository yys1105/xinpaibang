@import '../../../assets/style/variables.styl'

#setting-box
  display block
  margin 40px auto
  width 940px
  box-shadow 0 0 5px #bebebe
  header
    height 49px
    line-height 49px
    text-align center
    font-size 22px
    border-bottom 1px solid #dddee1
  .setting-list
    padding 0 20px
    /* 基础信息 */
    .basic-info
      width 320px
      margin 0 auto
    /* 修改头像 */
    .avatar-change
      width 172px
      margin 0 auto
      text-align center
      .card-style
        width 166px
        height 166px
        display block
        margin 0 auto

      .avatar-box
        padding 16px
        width 100%
        height 100%
        overflow hidden
        cursor pointer
        display inline-block
        img
          max-width 100%
          max-height 100%
      .submit-btn
        margin-top 36px
        width 153px
    /* 修改密码 */
    .modify-pwd
      width 324px
      margin 0 auto
    /* 账号关联 */
    .associated-account
      width 440px
      margin 0 auto
.unbind
  width 250px
  margin 100px auto
  background-color: #fff
  padding 20px
  padding-bottom 10px

