@import '../../assets/style/variables.styl'

.home-banner
  height 313px
  background-color #f0f0f0
  overflow hidden
  .carousel-item
    height 313px
    text-align center
    position relative
    overflow hidden
    img
      min-height 313px
      max-width 910px
    .carousel-info
      position absolute
      width 910px
      bottom 0
      height 80px
      background-color rgba(0, 0, 0, .6)
      color #fff
      line-height 80px
      text-overflow ellipsis
      overflow hidden
      padding 0 20px


.list-title
