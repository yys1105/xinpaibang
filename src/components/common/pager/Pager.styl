@import '../../../assets/style/common.styl'

.simple-pager
  text-align center
  user-select none
  color #999

  li
    display inline-block
    text-align center
    min-width 24px
    min-height 24px
    line-height 24px
    margin-left 5px

    &.active
      color $sky

    &.pagi-disable
      cursor not-allowed !important
      color $lightAsh !important

    &.pagi-prev
      &::after
        content '< 向前'

    &.pagi-next
      &::after
        content '向后 >'

    &.pagi-other
      &::after
        content '...'

    &:not(.pagi-tool):hover
      background-color $sky
      color #fff

    &:not(.pagi-other)
      cursor pointer
